# Backend API Configuration
# Copy this file to .env.local and update the values as needed

# Backend API Base URL
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000/api/v1
BACKEND_URL=http://localhost:8000

# Example for production:
# NEXT_PUBLIC_API_BASE_URL=https://your-api-domain.com/api/v1
# BACKEND_URL=https://your-api-domain.com

# Example for staging:
# NEXT_PUBLIC_API_BASE_URL=https://staging-api.your-domain.com/api/v1
# BACKEND_URL=https://staging-api.your-domain.com

# Google OAuth2 Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
REDIRECT_URI=http://localhost:3000/api/auth/google

# Banking Information for QR Code Payment
NEXT_PUBLIC_BANK_ID=
NEXT_PUBLIC_ACCOUNT_NO=
NEXT_PUBLIC_ACCOUNT_NAME=
NEXT_PUBLIC_BANK_NAME= 